{
	"$schema": "https://docs.renovatebot.com/renovate-schema.json",
	"description": "Default config for NodeJS projects",
	"extends": [
		"github>jloh/renovate-config:default.json5",
		":automergePatch",          // Automatically merge patch updates only
		"npm:unpublishSafe",        // Wait 3 days before updating
		":maintainLockFilesWeekly",
	],
	"packageRules": [
		{
			description: "Auto-merge dev/formatting tools",
			matchManagers: ["npm"],
			matchPackageNames: [
				"prettier",
			],
			automerge: true,
			automergeType: "branch",
			matchUpdateTypes: ["minor", "patch"],
			minimumReleaseAge: "3 days",
		},
	],
}
